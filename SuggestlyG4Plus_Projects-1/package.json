{
  "name": "stella-global-class-project",
  "version": "1.0.0",
  "description": "Stella Global Class Production Server with Premium Features",
  "main": "auto-start-production.js",
  "scripts": {
    "start": "set NODE_ENV=production&& node auto-start-production.js",
    "dev": "set NODE_ENV=development&& node auto-start-production.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo \"Production build completed\""
  },
  "keywords": [
    "production",
    "server",
    "premium",
    "stella",
    "global",
    "class",
    "enterprise"
  ],
  "author": "Stella Global Class Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.8.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "puppeteer": "^21.6.1",
    "artillery": "^2.0.3",
    "eslint": "^8.55.0",
    "shellcheck": "^1.1.0",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!tests/**",
      "!node_modules/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
