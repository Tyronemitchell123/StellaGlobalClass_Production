# Stella Global Class Production Server
# Environment Variables Configuration

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# OPENAI API CONFIGURATION
# ============================================
# Your OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI Model Configuration (optional)
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ============================================
# PREMIUM FEATURES
# ============================================
PREMIUM_MODE=true
GLOBAL_ACCESS=true
ENTERPRISE_SECURITY=true
AUTO_SCALING=true

# ============================================
# MONITORING & ANALYTICS
# ============================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
ENABLE_PREMIUM_ANALYTICS=true

# ============================================
# DOMAIN CONFIGURATION
# ============================================
DOMAIN_VELOCITIES_ENABLED=true
DOMAIN_CONCIERGE_ENABLED=true
DOMAIN_ONTARGETWEBDESIGN_ENABLED=true

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================
# Uncomment and configure if using a database
# DATABASE_URL=mongodb://localhost:27017/stella-global-class
# DATABASE_NAME=stella_production
# DATABASE_USER=admin
# DATABASE_PASSWORD=your-secure-password

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# For access request notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=50

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/production.log

# ============================================
# SESSION & AUTHENTICATION (Optional)
# ============================================
# SESSION_SECRET=your-random-secret-key-here
# JWT_SECRET=your-jwt-secret-here
# JWT_EXPIRATION=24h

# ============================================
# VERCEL DEPLOYMENT (For Vercel CLI)
# ============================================
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-org-id
# VERCEL_PROJECT_ID=your-project-id
